module IdenTest;


import Minilib.Monad.Iden;
import Minilib.Testing.UnitTest;

test_identity_functor: TestCase;
test_identity_functor = (
    make_test("test_identity_functor") $ |_|
    let ma = Iden::make(2);
    let ma = ma.map(add(1));
    let ma = ma.map(to_string);
    assert_equal("eq", "3", ma.get)
);

test_identity_monad: TestCase;
test_identity_monad = (
    make_test("test_identity_monad") $ |_|
    let ma = Iden::make(2);
    let mc = do {
        let a = *ma;
        let b = *pure(a + 1);
        pure $ b.to_string
    };
    assert_equal("eq", "3", mc.get)
);

test_run_identity: TestCase;
test_run_identity = (
    make_test("test_run_identity") $ |_|
    let ma = identity $ 1;
    let a = ma.run_identity;
    assert_equal("eq", 1, a)
);

test_lift_identity: TestCase;
test_lift_identity = (
    make_test("test_lift_identity") $ |_|
    let ma = identity $ 1;
    let a = *ma.lift_identity;
    assert_equal("eq", 1, a)
);

main: IO ();
main = (
    [
        test_identity_functor,
        test_identity_monad,
        test_run_identity,
        test_lift_identity,
        TestCase::empty
    ]
    .run_test_driver
);


